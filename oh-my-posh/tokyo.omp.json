{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "console_title_template": "{{.OS}}::{{.Folder}}{{if .Root}} :: root{{end}} :: {{.Shell}}",
    "final_space": true,
    "version": 2,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "os",
                    "style": "diamond",
                    "leading_diamond": "\uE0B6",
                    "trailing_diamond": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#F7768E"
                },
                {
                    "type": "battery",
                    "style": "diamond",
                    "leading_diamond": "<transparent>\uE0B0",
                    "trailing_diamond": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#e0af68",
                    "background_templates": [
                        "{{if eq \"Charging\" .State.String}}#7aa2f7{{end}}",
                        "{{if eq \"Discharging\" .State.String}}#ff9e64{{end}}",
                        "{{if eq \"Full\" .State.String}}#9ece6a{{end}}"
                    ],
                    "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }} ",
                    "properties": {
                        "discharging_icon": "<#FF0000> ",
                        "charging_icon": "<#0000FF> ",
                        "charged_icon": "<#00FF00> "
                    }
                },
                {
                    "type": "shell",
                    "style": "diamond",
                    "leading_diamond": "<transparent>\uE0B0",
                    "trailing_diamond": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#bb9af7"
                },
                {
                    "type": "path",
                    "style": "diamond",
                    "leading_diamond": "<transparent>\uE0B0",
                    "trailing_diamond": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#7dcfff",
                    "properties": {
                        "style": "full"
                    }
                },
                {
                    "type": "exit",
                    "style": "diamond",
                    "leading_diamond": "<transparent>\uE0B0",
                    "trailing_diamond": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#47f950",
                    "background_templates": [
                        "{{ if gt .Code 0 }}#f7768e{{ end }}"
                    ],
                    "template": "{{ if gt .Code 0 }} \uF00D {{ else }} \uE23A {{ end }}",
                    "properties": {
                        "always_enabled": true
                    }
                }
            ]
        },
        {
            "type": "rprompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "executiontime",
                    "style": "diamond",
                    "leading_diamond": "\uE0B6",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "#ffffff",
                    "background": "#a9b1d6",
                    "template": " <#fefefe></> {{ .FormattedMs }} ",
                    "properties": {
                        "threshold": 500,
                        "style": "austin",
                        "always_enabled": true
                    }
                },
                {
                    "type": "git",
                    "style": "diamond",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "#FFFFFF",
                    "background": "#0000FF",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#9ece6a{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff9e64{{ end }}",
                        "{{ if gt .Ahead 0 }}#bb9af7{{ end }}",
                        "{{ if gt .Behind 0 }}#7aa2f7{{ end }}"
                    ],
                    "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }}",
                    "properties": {
                        "fetch_status": true,
                        "fetch_stash_count": true,
                        "fetch_upstream_icon": true,
                        "native_fallback": true,
                        "fetch_user": true
                    }
                },
                {
                    "type": "time",
                    "style": "diamond",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "#FFFFFF",
                    "background": "#565f89",
                    "properties": {
                        "time_format": "15:04:05"
                    }
                },
                {
                    "type": "session",
                    "style": "diamond",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "#ffffff",
                    "background": "#cfc9c2",
                    "template": " {{ .UserName }} @ {{ .HostName }}",
                    "properties": {
                        "display_host": true
                    }
                }
            ]
        }
    ]
}