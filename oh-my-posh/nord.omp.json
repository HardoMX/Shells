{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "console_title_template": "{{.OS}} :: {{.Folder}}{{if .Root}} :: root{{end}} :: {{.Shell}}",
    "final_space": true,
    "version": 2,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "os",
                    "style": "diamond",
                    "leading_diamond": "\uE0B6",
                    "trailing_diamond": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#B48EAD" 
                },
                {
                    "type": "battery",
                    "style": "diamond",
                    "leading_diamond": "<transparent>\uE0B0",
                    "trailing_diamond": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#ffeb3b",
                    "background_templates": [
                        "{{if eq \"Charging\" .State.String}}#ebcb8b{{end}}",
                        "{{if eq \"Discharging\" .State.String}}#bf616a{{end}}",
                        "{{if eq \"Full\" .State.String}}#a3be8c{{end}}"
                    ],
                    "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }} ",
                    "properties": {
                        "discharging_icon": "<#FF0000> ",
                        "charging_icon": "<#0000FF> ",
                        "charged_icon": "<#00FF00> "
                    }
                },
                {
                    "type": "shell",
                    "style": "diamond",
                    "leading_diamond": "<transparent>\uE0B0",
                    "trailing_diamond": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#D08770"
                },
                {
                    "type": "path",
                    "style": "diamond",
                    "leading_diamond": "<transparent>\uE0B0",
                    "trailing_diamond": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#EBCB8B",
                    "properties": {
                        "style": "full"
                    }
                },
                {
                    "type": "exit",
                    "style": "diamond",
                    "leading_diamond": "<transparent>\uE0B0",
                    "trailing_diamond": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#A3BE8C",
                    "background_templates": [
                        "{{ if gt .Code 0 }}#BF616A{{ end }}"
                    ],
                    "template": "{{ if gt .Code 0 }}\uF00D {{ else }} \uE23A {{ end }}",
                    "properties": {
                        "always_enabled": true
                    }
                }
            ]
        },
        {
            "type": "rprompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "executiontime",
                    "style": "diamond",
                    "leading_diamond": "\uE0B6",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "#ffffff",
                    "background": "#8fbcbb",
                    "template": " <#fefefe></> {{ .FormattedMs }} ",
                    "properties": {
                        "threshold": 500,
                        "style": "austin",
                        "always_enabled": true
                    }
                },
                {
                    "type": "git",
                    "style": "diamond",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "#FFFFFF",
                    "background": "#88c0d0",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#ebcb8b{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#d08770{{ end }}",
                        "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
                        "{{ if gt .Behind 0 }}#B388FB{{ end }}"
                    ],
                    "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }}",
                    "properties": {
                        "fetch_status": true,
                        "fetch_stash_count": true,
                        "fetch_upstream_icon": true,
                        "native_fallback": true,
                        "fetch_user": true
                    }
                },
                {
                    "type": "time",
                    "style": "diamond",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "#FFFFFF",
                    "background": "#81a1c1",
                    "properties": {
                        "time_format": "15:04:05"
                    }
                },
                {
                    "type": "session",
                    "style": "diamond",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "#ffffff",
                    "background": "#5e81ac",
                    "template": " {{ .UserName }} @ {{ .HostName }}",
                    "properties": {
                        "display_host": true
                    }
                }
            ]
        }
    ]
}